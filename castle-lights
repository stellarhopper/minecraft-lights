-- local arg = { ... }

local function move_fu()
	turtle.up()
	turtle.forward()
end

local function move_db()
	turtle.back()
	turtle.down()
end

print("Starting light-controlling-space-turtle!")
redstone.setOutput("left", true)
move_fu()
move_fu()
move_fu()
move_fu()
move_fu()
move_fu()
sleep(2)
move_db()
move_db()
move_db()
move_db()
move_db()
move_db()

